{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "npm",
    "analytics": false
  },
  "schematics": {
    "@schematics/angular:component": { "standalone": false, "style": "scss" },
    "@schematics/angular:directive": { "standalone": false },
    "@schematics/angular:pipe": { "standalone": false }
  },
  "newProjectRoot": "projects",
  "projects": {
    "ecom-pd-frontend_v2": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss",
          "standalone": false
        },
        "@schematics/angular:directive": {
          "standalone": false
        },
        "@schematics/angular:pipe": {
          "standalone": false
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "browser": "src/main.ts",
            "inlineStyleLanguage": "scss",
             "aot": true,
            "outputPath": "dist",
            "index": "src/index.html",
            "tsConfig": "src/tsconfig.app.json",           
            "assets": [
              "src/assets",
              "src/favicon-protecta.ico",
              "src/web.config",
              "src/manifest.json",
              {
                "glob": "**/*",
                "input": "node_modules/ngx-extended-pdf-viewer/assets/",
                "output": "/assets/"
              }
            ],
            "styles": [
              "src/styles.scss"
            ],
            "scripts": [
              "node_modules/jquery/dist/jquery.min.js"
            ],
            "stylePreprocessorOptions": {
              "includePaths": [
                "./src/app/shared/styles"
              ]
            }
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kB",
                  "maximumError": "1MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kB",
                  "maximumError": "8kB"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "development"
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "ecom-pd-frontend_v2:build:production"
            },
            "development": {
              "buildTarget": "ecom-pd-frontend_v2:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "test": {
          "builder": "@angular/build:unit-test"
        }
      }
    }
  }
}

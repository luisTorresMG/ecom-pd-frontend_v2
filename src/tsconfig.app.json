{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "paths": {
      "@shared/*": [
        "app/shared/*"
      ],
      "@root/*": [
        "app/*"
      ],
      "@screen-splash": [
        "app/shared/services/screen-splash/screen-splash.service.ts"
      ]
    },
    "outDir": "../out-tsc/app",
    "baseUrl": "./",
    "types": [
      "node",
      "jquery"
    ]
  },
  "files": [
    "main.ts",
    "polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}